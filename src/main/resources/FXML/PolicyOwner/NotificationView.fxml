<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="250.0" prefWidth="310.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="insuranceapp.groupproject_cosc2440_insuranceapp.Controllers.PolicyOwner.NotificationController">
   <VBox prefHeight="250.0" prefWidth="310.0">
      <StackPane prefHeight="76.0" prefWidth="300.0" styleClass="title_container"
                 stylesheets="@../../Styles/Notification.css">
         <Label text="Notification" textFill="WHITE"/>
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </StackPane>
      <StackPane prefHeight="102.0" prefWidth="310.0" styleClass="content_container"
                 stylesheets="@../../Styles/Notification.css">
         <Label fx:id="notificationMsgLbl" alignment="CENTER" prefHeight="66.0" prefWidth="300.0"
                text="The new Policy Holder has been added to the system" textAlignment="CENTER" wrapText="true"/>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="310.0">
         <Button fx:id="closeWindowBtn" mnemonicParsing="false" stylesheets="@../../Styles/Notification.css"
                 text="Click here to close the notification"/>
      </StackPane>
   </VBox>
</AnchorPane>
